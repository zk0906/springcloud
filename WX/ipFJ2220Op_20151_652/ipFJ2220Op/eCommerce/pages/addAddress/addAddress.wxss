page{
  background-color:#F3F3F3;
}
.newAddressView {
  border-bottom: 1px solid #f3f3f3;
}
.newAddressBox {
  background: #fff;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.newAddressBox > view {
  line-height: 84rpx;
}
.newAddressBox input {
  display: inline-block;
  line-height:84rpx;
  height:84rpx;
  vertical-align:middle;
  width: 520rpx;
  text-align:right;
  float:right;
}
.newAddressBox label {
  width: 124rpx;
  display: inline-block;
  vertical-align: top;
  color: #333;
}
.newAddressBox .adressLabel {
  display: inline-block;
  border: 1px solid #D5D5DE;
  color: #999;
  min-width: 60rpx;
  line-height: 46rpx;
  text-align: center;
  margin-left: 20rpx;
  border-radius: 24rpx;
  padding: 0 20rpx;
}
.newAddressBox .adressLabel.active {
  border: 1px solid #ff7100;
  color: #ff7100;
  background: #FFF1E5;
}
.newAddressBottom {
  padding: 50rpx 30rpx;
  text-align: center;
  font-size: 30rpx;
}
.newAddressBottom .sureAddAddress {
  background: #ff7100;
  color: #fff;
  line-height: 88rpx;
  border-radius: 4rpx;
}
.newAddressBottom .cancelAddAddress {
  line-height: 88rpx;
  border-radius: 4rpx;
  background: #fff;
  margin-top: 30rpx;
}
.prov-city-dirs{
  position: absolute;
  top: 82rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 82rpx);
  text-align: center;
  background-color: rgba(0,0,0,0.5)
}
.prov-city-dirs .picker-btn{
  position: absolute;
  bottom: 50%;
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.prov-city-dirs .picker-btn .cancel-picker{
  float: left;
  margin-left: 50rpx;
  color: #838383;
}
.prov-city-dirs .picker-btn .sure-picker{
  float: right;
  margin-right: 50rpx;
  color: #ff7100;
}
.province,
.city,
.dirstrict{
  line-height: 82rpx;
  height: 82rpx;
  text-indent: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}
.province.active,
.city.active,
.dirstrict.active{
  color: #333;
}
.adress-label-box {
  display: inline-block;
  text-align: right;
  float: right;
  margin-top: 2rpx;
}
.newAddressView .icon-rightarrow{
  float: right;
  font-size: 12px;
  color: #d5d5d5;
  margin-left: 6rpx
}
.nationName {
  width: calc( 100% - 124rpx);
  display: inline-block;
  text-align: right;
}
.nationName image{
  width: 52rpx;
  height: 36rpx;
  vertical-align: middle;
}

/* 取货方式 */
.address-pick-up {
  display: inline-block;
  float: right;
  text-align: right;
}
.address-pick-up > view {
  display: inline-block;
  margin-left: 30rpx;
  color: #666;
}
.address-pick-up text {
  display: inline-block;
  vertical-align: middle;
}
.address-pick-up > view > .icon-goods-support-delivery {
  margin-right: 10rpx;
  font-size: 30rpx;
}
.address-pick-up > view .suporrt {
  color: #ff7100;
}
