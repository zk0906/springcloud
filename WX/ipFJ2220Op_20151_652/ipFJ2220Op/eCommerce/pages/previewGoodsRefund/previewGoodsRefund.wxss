page {
  background: #f3f3f3;
}
.shoppingCart-top-nav {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #333;
  padding: 0 30rpx;
  margin-top: 10rpx;
}

.shoppingCart-list-wrap {
  margin-bottom: 100rpx;
  overflow-x: hidden;
  overflow-y: auto;
}
.shoppingCart-goods-list {
  background-color: #fff;
}
.shoppingCart-goods-list > view {
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
  padding: 0 30rpx;
}
.shoppingCart-goods-list > view:first-child{
  border-top:1px solid #e5e5e5;
}
.shoppingCart-goods-content {
  width: calc(100% - 62rpx);
  display: inline-block;
  vertical-align: middle;
  padding: 30rpx 0 30rpx 25rpx;
}
.shoppingCart-check-box {
  display: inline-block;
  vertical-align: middle;
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #EBEBEB;
  border-radius: 50%;
  background: #fff;
  box-sizing: border-box;
  line-height: 36rpx;
}
.shoppingCart-check-box.checked {
  color: #ff7100;
  background: #fff;
  border: none;
}
.shoppingCart-goods-cover {
  width:  156rpx;
  height: 156rpx;
  margin-right: 25rpx;
  display: inline-block;
  vertical-align: top;
  position: relative;
}
.shoppingCart-goods-cover image{
  width: 100%;
  height: 100%;
}
.shoppingCart-goods-model {
  color: #999;
  font-size: 24rpx;
}
.shoppingCart-bottom-nav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-left: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
  z-index: 9;
  background-color: #fff;
  border-top: 1rpx solid #f3f3f3;
}
.real-price {
  color: #ff7100;
  font-size: 28rpx;
}

.goods-content-box {
  display: inline-block;
  width: calc(100% - 180rpx);
  height: 156rpx;
  position: relative;
}
.shoppingCart-goods-title {
  font-size: 26rpx;
  color: #333;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  margin-bottom: 10rpx;
  word-break: break-all;
}
.goods-num-mius,.goods-num-plus,.goods-num-box {
  width: 50rpx;
  line-height: 38rpx;
  box-sizing: border-box;
  border: 1px solid #EBEBEB;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
  padding: 0;
  max-height: 40rpx;
  min-height: 40rpx;
  color: #999;
}
.goods-num-box {
  border-right: 0;
  border-left: 0;
  color: #333;
  font-size: 24rpx;
}
.goods-num-plus {
  color: #ff7100;
}
.select-all {
  font-size: 26rpx;
  margin-left: 20rpx;
  color: #666;
}

.is-seckill {
  display:inline-block;
  padding: 0 10rpx;
  background: #f2303e;
  color: #fff;
  font-size: 22rpx;
  height: 26rpx;
  line-height: 26rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}
.seckill-price {
  font-size: 26rpx;
  text-decoration: line-through;
  color: #999;
  margin-right: 10rpx;
}
.sure-refund-btn {
  height: 88rpx;
  line-height: 88rpx;
  width: 200rpx;
  background: #ff7100;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}