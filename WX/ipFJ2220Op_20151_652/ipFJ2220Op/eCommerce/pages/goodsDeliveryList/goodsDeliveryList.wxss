page {
  background: #f3f3f3;
}
map {
  width: 100%;
  height: 400rpx;
  margin-top: 10rpx;
}
.delivery-list {
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.delivery-list .icon-goods-location {
  display: inline-block;
  vertical-align: middle;
  margin-right: 27rpx;
  color: #999;
}
.delivery-list-content {
  width: 588rpx;
  display: inline-block;
  vertical-align: middle;
}
.delivery-list-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 28rpx;
}
.delivery-list-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 36rpx;
  margin-top: 10rpx;
  margin-right: 30rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.delivery-check-box {
  display: inline-block;
  color: #D9D9D9;
  vertical-align: middle;
  font-size: 34rpx;
}
.delivery-list-distance {
  color: #999999;
  display: inline-block;
  vertical-align: middle;
  font-size: 22rpx;
}
.delivery-lately {
  color: #ff7100;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  width: 95rpx;
  line-break: 26rpx;
  font-size: 22rpx;
  margin-right: 17rpx;
  border: 1rpx solid #ff7100;
}
.delivery-check-box.checked {
  color: #ff7100;
}
.sure-delivery {
  position: fixed;
  bottom: 0;
  color: #fff;
  background: #ff7100;
  width: 100%;
  line-height: 88rpx;
  font-size: 30rpx;
  text-align: center;
}
.delivery-list-box {
  padding-bottom: 100rpx;
  overflow-y: auto;
}