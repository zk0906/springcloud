.app .drop-down view {
  text-indent: 30rpx;
}
.app .drop-down picker {
  border-top: 1px solid #ddddde;
}
.app .drop-down .drop-down-picker-title {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}


.app .input-ele {
	width: 60%;
	height: 30px;
	margin-left: auto;
  margin-right: auto;
}
.app .input-ele input {
  width: 100%;
  height: 100%;
	box-sizing: border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	border-radius: inherit;
	border: 1px solid #d3d3d3;
  padding-left: 6px;
  outline: none;
  background-color: #fff;
  font-size: 28rpx;
}


.app .grade-ele{
	width: 168px;
	height: 23px;
	margin-left: auto;
  margin-right: auto;
	background-color: #fff;
}
.app .grade-wrap {
  position: relative;
  display: inline-block;
  width: 100%;
  height: 100%;
  background-color: inherit;
}
.app .grade-wrap .ico-moon{
  display: inline-block;
  width: 20%;
  height: 100%;
  font-size: 26px;
  text-align: center;
}
.app .grade-wrap .icon-star,
.app .grade-wrap .icon-star-empty {
  color: #fe8401;
}
.app .grade-wrap .icon-clubs,
.app .grade-wrap .icon-clubs-empty {
  color: #14b10c;
}
.app .grade-wrap .icon-heart,
.app .grade-wrap .icon-heart-empty {
  color: #fd4e4e;
}
.app .grade-ele slider {
  width: 80%;
  display: inline-block;
  vertical-align: middle;
  margin: 0 18px;
}
.app .grade-ele .slider-score {
  display: inline-block;
  width: 20rpx;
  vertical-align: middle;
  text-align: center;
}

.app .select-ele {
	width: 100%;
	line-height: 35px;
	margin-left: auto;
  margin-right: auto;
}
.app .select-container {
	text-decoration: inherit;
}
.app .select-container-type0 {
  border:1px solid #ddd;
  border-bottom:0;
}
.app .select-container .title-container {
	display: inline-block;
	width: 100%;
	line-height: 30px;
	background-color: #3598db;
	color: #fff;
	text-indent: 18rpx;
	font-weight: normal;
	font-style: normal;
}
.app .select-container .select-item {
  position: relative;
  min-height: 24px;
  text-indent: 7rpx;
  border-bottom: 1px solid #ddd;
}
.app .select-container .select-content {
  position: relative;
  display: inline-block;
  width: 100%;
  height: 100%;
}
.app .select-container .select-text {
  display: inline-block;
  width: 85%;
  height: 100%;
  vertical-align:middle;
}
.select-ele-second .select-list {
  width: calc(50% - 12rpx);
  display: inline-block;
  margin-top: 20rpx;
  padding-left: 20rpx;
  position: relative;
  box-sizing: border-box;
}
.select-ele-second .select-list:nth-child(2n){
  margin-right: 20rpx;
}
.select-list label {
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  font-size: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  line-height: 30rpx;
  text-align: right;
}

.app .textarea-ele {
	width: 80%;
	height: 100px;
	line-height: 30px;
	margin-left: auto;
  margin-right: auto;
}
.app .textarea-ele textarea {
  width: 100%;
  height: 100%;
	box-sizing: border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	border-radius: inherit;
	border: 1px solid #d3d3d3;
  outline: none;
  resize: none;
  background-color: #fff;
  padding: 14rpx;
  font-size: 28rpx;
}


.app .xcx-time-ele {
  width: 84%;
  margin: 0 auto;
}
.app .xcx-time-ele picker {
  display: inline-block;
  height: 100%;
  width: 50%;
  box-sizing: border-box;
}
.app .xcx-time-ele .date-btn, .app .xcx-time-ele .time-btn {
  display: inline-block;
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.select-ele.must .title,.select-ele-second.must .title {
  position: relative;
  display:inline-block;
  text-indent:-3px;
  text-decoration: inherit;
}


.app .upload-img {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  color: #979797;
  font-size: 30rpx;
  text-align: center;
}
.app .upload-img.js-uploaded {
  background-color: transparent;
}
.app .upload-img.js-uploaded:before, .app .upload-img.js-uploaded:after {
  content: '';
  display: inline-block;
  width: 0;
  height: 100%;
  vertical-align: middle;
}
.app .upload-img .plus-div {
  width: 210rpx;
  height: 210rpx;
  border: 1px dashed#e9e9e9;
  text-align: center;
  display: inline-block;
  vertical-align:top;
  margin-left: 10rpx;
  margin-bottom: 27rpx;
  color: #DDDDDE;
}
.app .upload-img.js-uploaded .plus-div {
  display: none;
}
.app .upload-img image {
  display: inline-block;
  position: static;
  max-width: 100%;
  max-height: 100%;
}
.app .js-uploaded image {
	display: inline-block;
  position: static;
  width: auto;
  height: auto;
}
.app .hasuploadImg {
  width:210rpx;
  height:210rpx;
  display:inline-block;
  margin-left: 10rpx;
  margin-bottom: 27rpx;
  border: 1px solid #e9e9e9;
  vertical-align: top;
}
.deleteImg {
  position:absolute;
  top:0;
  right: 0;
  background-color: rgba(0,0,0,0.3);
  color:#fff;
  width:18px;
  height:18px;
  text-align:center;
  line-height:18px;
  font-size:14px;
  font-weight:700;
}


.pic-options.mode-two .pic-options-list {
  display: inline-block;
  width: 50%;
  vertical-align: top;
}
.app .pic-options .pic-options-item {
  position: relative;
  margin: 20rpx auto 0;
}
.app .pic-options .icon-gou {
  font-size: 10px;
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  text-align: right;
}
.app .pic-options .icon-big-pic {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
}


.input-ele.must:after,
.textarea-ele.must:after,
.upload-img.must:after,
.xcx-time-ele.must:after,
.grade-ele.must:after,
.select-ele.must .title:after,
.select-ele-second.must .title:after {
  content: '*';
  position: absolute;
  right: -10px;
  top: 0;
  font-size: 16px;
  color: red;
}
.upload-img.must:after {
  top: 20px;
  right: auto;
  margin-left: 5px;
}
.time-ele.must:after {
  top: 0;
  right: -13px;
}