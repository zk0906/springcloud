page {
  background-color: #fff;
}
.couponsMall-main-wrap {
  padding-bottom: 96rpx;
  background-color: #fff;
}
/* 搜索 */
.couponsMall-search-wrap {
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  padding: 26rpx 30rpx 22rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  background-color: #fff;
  box-shadow:0 2rpx 8rpx 0 rgba(41,41,41,0.05) inset;
}
.couponsMall-search-wrap .search-location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}
.couponsMall-search-wrap .icon-fesadress {
  font-size: 24rpx;
  font-weight: 600;
}
.couponsMall-search-wrap .location-txt {
  max-width: 104rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 26rpx;
  margin: 0 10rpx;
}
.couponsMall-search-wrap .icon-downarrow {
  font-size: 20rpx;
  padding-top: 4rpx;
}
.couponsMall-search-wrap .search-input {
  width: 460rpx;
  padding: 0 32rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  background-color: #f3f3f3;
}
.couponsMall-search-wrap .icon-search {
  margin-right: 18rpx;
  font-size: 28rpx;
  color: #b3b3b3;
}
.couponsMall-search-wrap .search-input input {
  width: 100%;
}
.couponsMall-search-wrap .search-input-pla {
  color: #999;
}
/* 导航 */
.couponsMall-top-nav-wrap {
  z-index: 1001;
  position: fixed;
  top: 102rpx;
  left: 0;
  right: 0;
  background-color: #fff;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav {
  height: 86rpx;
  width: calc(100%-140rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 70rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  transition: height .2s linear;
  overflow: hidden;
  border-bottom: 1rpx solid #f3f3f3;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav view {
  height: 100%;
  line-height: 86rpx;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav view.active {
  transition: all .1s ease-in;
  color: #ff7100;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav view.disabled {
  transition: all .1s ease-in;
  color: #c5c5c5;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav .nav-has-sub {
  display: flex;
  align-items: center;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav .nav-has-sub.active {
  color: #ff7100;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav .ico-moon {
  padding-left: 12rpx;
  color: #d5d5d5;
  font-size: 14rpx;
}
.couponsMall-top-nav-wrap .couponsMall-top-nav .active .icon-filter-up {
  color: #ff7100;
}
.couponsMall-top-nav-wrap .couponsMall-top-sub-nav {
  z-index: 1000;
  position: absolute;
  top: 84rpx;
  left: 0;
  right: 0;
  width: calc(100%-60rpx);
  font-size: 26rpx;
  background-color: #fff;
  overflow: hidden;
  transition: height .2s ease-in;
}
.couponsMall-top-nav-wrap .couponsMall-top-sub-nav view {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 52rpx;
  color: #666;
  background-color: #fff;
}
.couponsMall-top-nav-wrap .couponsMall-top-sub-nav .icon-gou {
  opacity: 0;
  font-size: 18rpx;
  padding-right: 10rpx;
}
.couponsMall-top-nav-wrap .couponsMall-top-sub-nav .active {
  color: #ff7100;
  background-color: rgba(255,113,0,.06);
}
.couponsMall-top-nav-wrap .couponsMall-top-sub-nav .active .icon-gou { 
  opacity: 1;
}
.top-nav-mask {
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  transition: height .3s ease-in .1s;
}

/* 商家列表 */
.merchants-list {
  height: 100%;
  margin-top: 186rpx;
  transition: all .2s linear;
  background-color: #fff;
}
.merchant-item:first-child {
  border-top: 0;
}
.merchant-item {
  width: cacl(100% -60rpx);
  padding: 28rpx 30rpx 0;
  border-top: 14rpx solid #f3f3f3;
  background-color: #fff;
}
.merchant-item .merchant-info {
  display: flex;
  justify-content: space-between;
}
.merchant-item .merchant-info .merchant-img-wrap {
  width: 204rpx;
  height: 152rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  background-color: #f3f9fe;
  overflow: hidden;
}
.merchant-item .merchant-info .merchant-img {
  max-width: 100%;
  max-height: 100%;
}
.merchant-item .merchant-info .merchant-img.logo-img {
  max-width: 70%;
  max-height: 70%;
}
.merchant-item .merchant-info .merchant-detail {
  display: flex;
  flex-direction: column;
  width: 460rpx;
  margin-left: 26rpx;
}
.merchant-item .merchant-detail .merchant-detail-top,
.merchant-item .merchant-detail .merchant-detail-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  line-height: 22rpx;
}
.merchant-item .merchant-detail .merchant-detail-top {
  margin: 10rpx 0 28rpx;
}
.merchant-item .merchant-detail .merchant-name {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.merchant-item .merchant-detail .ico-moon {
  font-size: 40rpx;
  line-height: 40rpx;
}
.merchant-item .merchant-detail .icon-dmstar-empty {
  color: #d2d2d2;
}
.merchant-item .merchant-detail .icon-dmstar {
  color: #ffc600;
  animation: starlinear .5s linear;
}
.merchant-item .merchant-detail .merchant-type {
  position: relative;
  padding: 8rpx 22rpx;
  color: #FF3600;
}
.merchant-item .merchant-detail .merchant-type:before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(255,54,0,.4);
  width: 200%;
  height: 200%;
  transform-origin: 0 0;
  transform: scale(0.5,0.5);
  box-sizing: border-box;
}
.merchant-item .merchant-detail .merchant-distance {
  color: #999;
}
.merchant-coupons-list .coupon-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 30rpx;
}
.merchant-coupons-list .coupon-item::before {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  right: 0;
  border-top-color: #dfdfdf;
  border-top-style: dashed;
  border-top-width: 1px;
  transform: scaleY(0.5);
}
.merchant-coupons-list .coupon-item:last-child::before {
  border-top-width: 0;
  border-top-style: none;
}
.merchant-coupons-list .coupon-info {
  display: flex;
  align-items: flex-start;
  margin-top: 10rpx;
}
.merchant-coupons-list .coupon-info .coupon-mark {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #FF3600;
  background-color: rgba(255,54,0,.06);
}
.merchant-coupons-list .coupon-info .coupon-mark::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(255,54,0,.4);
  width: 200%;
  height: 200%;
  transform-origin: 0 0;
  transform: scale(0.5,0.5);
  box-sizing: border-box;
}
.merchant-coupons-list .coupon-info .coupon-name-exchange {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx;
}
.merchant-coupons-list .coupon-name-exchange .coupon-name {
  height: 32rpx;
  max-width: 360rpx;
  font-size: 30rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
}
.merchant-coupons-list .coupon-name-exchange .coupon-exchange-num {
  max-width: 362rpx;
  margin-top: 20rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #999;
}
.merchant-coupons-list .coupon-item .coupon-exchange {
  display: flex;
  justify-items: center;
  align-items: center;
}
.merchant-coupons-list .coupon-item .exchange-btn {
  padding: 15rpx 24rpx;
  border-radius:40rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #fff; 
  background:linear-gradient(-90deg,rgba(255,54,0,1),rgba(255,174,0,1));
}
.merchant-coupons-list .coupon-item .exchange-diff {
  display: flex;
  align-items: flex-start;
  margin-right: 20rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #ff7100;
}
.merchant-coupons-list .coupon-item .exchange-diff text:first-child {
  padding-right: 4rpx;
  font-size: 20rpx;
  line-height: 30rpx;
}
.merchants-list .merchants-no-data-wrap {
  padding-top: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.merchants-list .merchants-no-data-wrap image {
  width: 200rpx;
  height: 200rpx;
}
.merchants-list .merchants-no-data-wrap text {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #c5c5c5;
}
.merchants-list .merchants-reach-bottom-wrap {
  padding-bottom: 20rpx;
  font-size: 26rpx;
  text-align: center;
  color: #c5c5c5;
}
/* 底部tabbar */
.couponsMall-tabbar-wrap {
  z-index: 998;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 80rpx;
  width: 92%;
  padding: 16rpx 4% 0;
  display: flex;
  justify-content: space-around;
  background-color: #fafafa;
}
.couponsMall-tabbar-wrap .tabbar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  font-size: 24rpx;
  color: #999;
}
.couponsMall-tabbar-wrap .tabbar.active {
  color: #333;
}
.couponsMall-tabbar-wrap .tabbar image {
  width: 38rpx;
  height: 42rpx;
  margin-bottom: 6rpx;
}
.couponsMall-tabbar-wrap .tabbar text{
  line-height: 24rpx;
}

/* toast样式 */
.toast-wrap {
  z-index: 10000;
  position: fixed;
  top: 48%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 0 50rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
  line-height: 72rpx;
  color: #fff;
  background-color: #ff7100;
  height: 0;
  opacity: 0;
  transition: opacity .6s ease-out;
}
.toast-wrap.show {
  height: 72rpx;
  opacity: 1;
  transition: opacity .6s ease-out;
}

/* 0.5px线条 */
.thin-bd-b,
.thin-bd-t {
  position: relative;
}
.thin-bd-b:before,
.thin-bd-t:before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  width: 100%;
  background-color: #f3f3f3;
  transform: scaleY(0.5);
  box-sizing: border-box;
}
.thin-bd-b:before {
  bottom: 0;
}
.thin-bd-t:before {
  top: 0;
}
@keyframes starlinear {
  
  /** 第一种写法**/
  0% {
    transform: scale(1,1);
  }
  50% {
    transform: scale(1.3,1.3);
  }
  100% {
    transform: scale(1,1);
  }
}
