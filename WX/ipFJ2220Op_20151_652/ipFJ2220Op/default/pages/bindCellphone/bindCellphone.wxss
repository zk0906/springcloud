page {
  background-color: #fff;
  color: #000;
}

input {
  color: #333;
}

.phcolor {
  color: #999;
}

.bindPhone-wrap {
  width: 536rpx;
  margin: 0 auto;
  padding: 20rpx 0;
}

.header-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  font-size: 55rpx;
  color: #000;
  margin: 100rpx 0;
}

.header-wrap .title-wrap {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.header-wrap .image-wrap,
.header-wrap image {
  width: 78rpx;
  height: 87rpx;
  margin-right: 20rpx;
}

.options {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 28rpx;
  color: #999;
  padding: 0 80rpx;
  border-bottom: 1px solid rgba(210, 210, 210, 0.6);
  margin-bottom: 60rpx;
}

.options>view {
  text-align: center;
  padding-bottom: 19rpx;
}

.active {
  color: #3091f2;
  border-bottom: 1px solid #3091f2;
}

.authorization {
  display: flex;
  justify-content: center;
  height: 88rpx;
  line-height: 88rpx;
  width: 536rpx;
  background: #09bb07;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  margin-top: 60rpx;
  border-radius: 0;
}

.authorization icon {
  font-size: 30rpx;
  color: #eee;
  margin-right: 15rpx;
}

.verify-row {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid rgba(210, 210, 210, 0.6);
  font-size: 28rpx;
  color: #999;
  height: 88rpx;
  line-height: 88rpx;
  width: 536rpx;
  margin-bottom: 30rpx;
}

.area-collect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 88rpx;
  opacity: 0;
}

.verify-row .area-collect .picker {
  height: 88rpx;
}

.verify-row input {
  display: flex;
  align-items: center;
  height: 100%;
  padding-left: 20rpx;
  width: 321rpx;
}

.verify-row view {
  width: 205rpx;
}

.phonenum view {
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 100rpx;
  text-align: center;
}

.phonenum input {
  padding-left: 20rpx;
  width: 100%;
}

.phonenum icon {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: rgba(210, 210, 210, 0.6);
}

.getCode view {
  border-left: 1px solid #eee;
  text-align: center;
}

.postCode view {
  background: #3091f2;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.option-btn {
  background: #3091f2;
  color: #fff;
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}

.bind-new-tel-btn {
  opacity: 1;
}

.bind-new-tel-btn.disabled {
  opacity: 0.7;
}

.pic-code {
  width: 170rpx;
  height: 85rpx;
}

.pic-code-wrap {
  background: #DFE8FF;
  height: 100%;
}
.back-home-btn {
  position: fixed;
  bottom: 220rpx;
  right: 20rpx;
  z-index: 2;
  height: 84rpx;
  width: 84rpx;
  color: #fff;
  text-align: center;
  line-height: 84rpx;
  font-size: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.4)
}