page {
  background-color: #eee;
}

.goods-detail-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 37px;
  padding-top: 5px;
  z-index: 1;
  text-align: center;
  background-color: transparent;
}

.goods-detail-nav .ico-moon {
  position: relative;
  margin-right: 15px;
  font-size: 22px;
  width: 37px;
  height: 37px;
  line-height: 37px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}

.goods-detail-content {
  padding-bottom: 55px;
}

.slick-carousel-container {
  width: 100%;
  height: 750rpx;
  overflow: hidden;
  padding-bottom: 50px;
  position: relative;
}

.goods-cover-container {
  position: relative;
  padding-bottom:50px;
}

.slick-carousel-container image, .goods-cover-container image {
  width: 100%;
  height: 100%;
}

swiper {
  height: 750rpx;
}

.slick-slide:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.slick-slide {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.slick-slide image {
  width: 100%;
  height: auto;
}

.goods-detail-section {
  background-color: #fff;
  margin-bottom: 4px;
}

.goods-header {
  padding: 1px 10px;
  border-top: 1px solid #eee;
}

.goods-share {
  margin: 5px 10px 0 0;
  padding: 0;
  font-size: 12px;
  line-height: 1.2;
  text-align: center;
  color: #666;
  background-color: transparent;
}

.goods-share .ico-moon {
  font-size: 20px;
}

.goods-title, .goods-price {
  padding: 5px 50px 5px 0;
  min-height: 12px;
}

.goods-price, .goods-models {
  border-bottom: 1px solid #eee;
}

.goods-title {
  font-size: 16px;
  font-weight: bold;
}

.goods-current-price {
  color: #f60;
  display: inline-block;
}

.goods-price-discount {
  display: inline-block;
  font-size: 14px;
  vertical-align: bottom;
  color: #acacac;
}

.goods-original-price {
  text-decoration: line-through;
  vertical-align: middle;
  color: #999;
  display: inline-block;
}

.block-item {
  padding: 12px;
}

.goods-details {
  padding: 10px;
  line-height: 22px;
}

.goods-details view {
  word-break: break-all;
  font-size: 14px;
}

.goods-details image {
  display: block;
  width: 100%;
}

.goods-model-item {
  margin: 8px 0;
}

.goods-model-item:after {
  content: "";
  display: table;
  clear: both;
}

.goods-model-cate {
  display: inline-block;
  color: #999;
  vertical-align: top;
}

.goods-model-detail {
  display: inline-block;
  margin-left: 10px;
  word-break: break-all;
  max-width: 75%;
}

.goods-bottom-opt {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  text-align: center;
  border-top: 1px solid #ccc;
  background-image: -webkit-linear-gradient(bottom, rgba(226, 227, 231, 0.33) 0%, rgba(248, 248, 248, 0.33) 100%);
  background-image: linear-gradient(to top, rgba(226, 227, 231, 0.33) 0%, rgba(248, 248, 248, 0.33) 100%);
  background-color: #fff;
  -webkit-user-select: none;
  user-select: none;
  font-size: 0;
}

.goods-bottom-opt .btn {
  width: 100%;
  padding-top: 10px;
  padding-bottom: 10px;
  border: none;
  box-sizing: border-box;
  border-radius: 0;
  color: #fff;
}

.goods-opt-item {
  position: relative;
  padding: 3px 0;
  font-size: 12px;
  color: #666;
}

.goods-opt-item:first-child {
  border-right: 1px solid #ccc;
}

.goods-bottom-opt .ico-moon {
  font-size: 20px;
}

contact-button {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.goods-comment-label {
  display: inline-block;
  padding: 4px 8px;
  background-color: #f5ece7;
  color: #7c7877;
  margin-right: 5px;
  border-radius: 2px;
  font-size: 12px;
}

.comment-item {
  padding: 15px 0 10px;
}

.comment-user-photo {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 7px;
  vertical-align: middle;
}

.comment-content {
  margin: 10px 0 6px;
  font-size: 13px;
  line-height: 16px;
}

.comment-date, .comment-goods-model {
  color: #999;
  font-size: 12px;
}

.goods-other-info {
  font-size: 14px;
}

.goods-other-info view {
  line-height: 20px;
  margin: 6px 0;
}

.goods-other-info text {
  color: #999;
}

.thumb {
  float: left;
  width: 60px;
  height: 60px;
  margin: 2px 10px 0;
}

.thumb image {
  width: 100%;
  height: 100%;
}

.goods-base-info {
  margin-left: 55px;
  display: inline-block;
}

.pay-goods-title, .pay-goods-price {
  padding-right: 50px;
  line-height: 22px;
}

.pay-current-price {
  color: #f60;
}

.pay-current-price text {
  vertical-align: middle;
  font-size: 18px;
}

.pay-goods-models {
  max-height: 400rpx;
  overflow: scroll;
}

.pay-goods-models .pills-list {
  display: inline-block;
  vertical-align: middle;
}

.pay-goods-models view {
  margin: 0;
  padding: 12px 0;
}

.pills-list label {
  color: #aaa;
  margin-bottom: 4rpx;
  margin-top: 4rpx;
}

.pills-list label.select {
  position: relative;
  color: #f60;
}

.pills-list label.select:after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 12px;
  height: 12px;
}

.pay-goods-stock {
  display: inline-block;
  margin: 5px 10px 0 0;
}

.pay-buy-next, .pay-add-to-shoppingcart {
  margin: 0 10px;
  padding: 11px 10px;
  font-size: 16px;
  line-height: 16px;
  border-radius: 4px;
}

.goods-detail-cart-num {
  position: absolute;
  top: 0;
  right: 0;
  width: 18px;
  height: 18px;
  line-height: 18px;
  font-size: 14px;
  background-color: #ff1616;
  border-radius: 50%;
  color: #fff;
  text-align: center;
}

/*
  拼团商品样式
*/

.group-price {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: #d0011b;
  color: #fff;
}

.group-price .goods-current-price {
  background-image: -webkit-gradient(linear, 0 0, 0 bottom, from(#fff), to(#ff9e6d));
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  margin-left: 30rpx;
  height: 70rpx;
  line-height: 75rpx;
  display: block;
}

.group-times {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 100rpx;
  background: #ffc617;
  text-align: center;
  background-image: -webkit-gradient(linear, 0 0, right 0, from(#fefa43), to(#ffc114));
}

.group-times:before {
  content: '';
  position: absolute;
  left: -50rpx;
  top: 0;
  border-top: 50rpx solid transparent;
  border-bottom: 50rpx solid transparent;
  border-right: 50rpx solid #fefa43;
}

.group-times view {
  height: 50rpx;
  line-height: 70rpx;
  font-size: 12px;
  min-width: 260rpx;
  color: #8c2301;
}

.goods-origin-price {
  margin-left: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 12px;
  padding-left: 20px;
}

.group-rule {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #ddd;
}

.group-tag {
  display: inline-block;
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  background: red;
  font-size: 12px;
  padding: 2rpx 10px;
  vertical-align: middle;
  color: #fff;
  margin-right: 12px;
  background-image: -webkit-gradient(linear, 0 0, right 0, from(#ff00ea), to(#ff0e18));
}

.group-tag::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-left: 6rpx solid #fff;
}

.group-tag::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-right: 6rpx solid #fff;
}

.group-step {
  margin: 0 auto;
  text-align: center;
  padding: 50rpx 0;
}

.group-step view {
  font-size: 40px;
  color: #d0011b;
  vertical-align: middle;
}

.group-step .arr {
  font-weight: bold;
  color: #d0011b;
  margin: 0 60rpx;
}

.group-step .step-description {
  font-size: 12px;
  color: #666;
}

.group-step .step-description text {
  color: #666;
  display: inline-block;
  width: 33%;
  text-align: center;
  vertical-align: middle;
  margin-top: 20px;
}

.grouping {
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  border-bottom: 1px solid #ddd;
}

.group-item {
  height: 150rpx;
  line-height: 150rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
}

.group-item image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  vertical-align: middle;
  margin-right: 20rpx;
}

.group-item-content {
  display: inline-block;
  vertical-align: middle;
  width: 300rpx;
}

.group-item-content view {
  height: 50rpx;
  line-height: 50rpx;
}

.group-item-price {
  display: inline-block;
  font-size: 32rpx;
  font-weight: bold;
  background-image: -webkit-gradient(linear, 0 0, right 0, from(#ff0e18), to(#ff00ea));
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  width: 150rpx;
  text-align: center;
}

.join-group-btn {
  display: inline-block;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #d0011b;
  color: #fff;
  padding: 4rpx 10rpx;
  position: relative;
}

.join-group-btn::after {
  content: '';
  position: absolute;
  right: -8px;
  top: 1px;
  border-top: 23rpx solid transparent;
  border-bottom: 23rpx solid transparent;
  border-left: 8px solid #d0011b;
}

.more-group {
  text-align: center;
  color: #d0011b;
  height: 20px;
  line-height: 20px;
  padding: 10px 0;
  font-size: 14px;
}

.no-group {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}

.start-group {
  display: inline-block;
  height: 30px;
  background: #d0011b;
  border-radius: 5px;
  text-align: center;
  line-height: 30px;
  color: #fff;
  padding: 0 20px;
  margin-left: 10px;
}

