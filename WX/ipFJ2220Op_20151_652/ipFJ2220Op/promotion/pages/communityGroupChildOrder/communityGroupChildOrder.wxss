page {
  height: 100%;
  background-color: #eee;
  font-size: 29rpx;
}

.myOrder-tab-list {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  line-height: 85rpx;
  height: 88rpx;
  font-size: 33rpx;
  background: #fff;
  text-align: center;
}

.myOrder-tab-list view {
  border-bottom: 2px solid transparent;
}

.myOrder-tab-list view.active {
  border-color: #ff7100;
  color: #ff7100;
}

.myOrder-content-body {
  height: calc(100% - 154rpx);
  margin-top: 169rpx;
}

.scrollContainer {
  height: 100%;
}

.myOrder-list-item {
  background-color: #fff;
  margin-bottom: 10rpx;
}

.myOrder-list-title {
  height: 60rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid rgb(243, 243, 243);
}

.myOrder-list-title .title-time {
  display: block;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}

.myOrder-list-title .title-time text {
  float: right;
  color: #ff7100;
}

.myOrder-list-goods {
  margin-bottom: 7rpx;
}

.goods-item {
  height: 160rpx;
  padding: 14rpx 30rpx 0;
  background: rgb(250, 250, 250);
  margin-bottom: 7rpx;
}

.goods-img {
  float: left;
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  margin-right: 42rpx;
  background-color: #fff;
}

.goods-img image {
  display: block;
  width: 100%;
  height: 100%;
}

.goods-describe {
  float: left;
  width: calc(100% - 182rpx);
  height: 150rpx;
}

.goods-describe .goods-describe-title, .goods-describe .goods-describe-price,
.goods-describe .goods-describe-model {
  display: block;
  color: rgb(51, 51, 51);
  font-size: 24rpx;
}

.goods-describe .goods-describe-model {
  font-size: 22rpx;
  color: rgb(153, 153, 153);
  margin: 10rpx 0 15rpx;
}

.goods-describe .goods-describe-price text {
  float: right;
}

.list-footer-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  padding: 0 30rpx;
}

.list-footer-label {
  padding: 20rpx 30rpx;
  color: rgb(102, 102, 102);
  text-align: right;
  border-bottom: 1rpx solid rgb(243, 243, 243);
  font-size: 24rpx;
}

.list-footer-label .origin {
  color: #ff7100;
}

.list-footer-btn text {
  display: inline-block;
  width: 174rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 10rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 113, 0, 1);
  text-align: center;
  color: rgba(255, 113, 0, 1);
  font-size: 24rpx;
}

.activity {
  position: fixed;
  top: 109rpx;
  left: 0;
  width: calc(100% - 60rpx);
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  background: rgb(255, 250, 238);
  color: #ff7100;
  font-size: 24rpx;
}

.activity > text:nth-child(1) {
  display:inline-block;
  max-width: 600rpx;
}

.noMoreNewDataTip {
  text-align: center;
  color: #aaa;
  line-height: 30px;
  margin-bottom: 10px;
}

.tostore-list-submenu view.active {
  color: #ff7100;
}

.tostore-sub-box {
  display: inline-block;
  padding: 0 16rpx;
  margin: 0 10rpx;
}

.tostore-list-submenu {
  overflow-x: auto;
  white-space: nowrap;
  background: #fff;
  color: #999;
  border-bottom: none;
}

/* 核销码 */
.verification-code {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  z-index: 1;
}
.verification-code-img {
  width: 100%;
  height: 100%;
}
.verification-code-text {
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.verification-image-box {
  width: 460rpx;
  height: 460rpx;
  margin-top: 310rpx;
  display: inline-block;
  position: relative;
}
.verification-code-finished {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 2555, 0.6);
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}
.verification-code-finished > view {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  left: -100rpx;
  color: #fff;
  background: #F2303E;
  transform: rotate(-45deg);
  line-height: 325rpx;
  font-size: 26rpx;
}