/* promotion/pages/communityGroupApply.wxss */

page {
  background-color: rgb(243, 243, 243);
}

.apply-status {
  height: 180rpx;
  line-height: 180rpx;
  color: #fff;
  background: linear-gradient(90deg, rgb(255, 174, 0) 0%, #ff7100 100%);
  background-size: 100% 100%;
  font-size: 34rpx;
}

.apply-status label {
  margin-right: 20rpx;
}

.apply-status>view {
  padding-left: 36rpx;
  background-image: url('http://zhichiwangluo.com/zhichi_frontend/static/webapp/images/xcx-goods/goods-order-bg.png');
  background-repeat: no-repeat;
  background-position: left bottom;
  background-size: 100% 100%;
}

.apply-content {
  padding-left: 30rpx;
  background-color: #fff;
}

.apply-list {
  background-color: #eee;
  font-size: 32rpx;
}

.apply-list-item {
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: space-between;
  padding-right: 30rpx;
  background-color: #fff;
  line-height: 84rpx;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}

.apply-list>.apply-list-item:last-child {
  border: none;
}

.apply-list-item .list-item-label {
  -webkit-flex-basis: 170rpx;
  flex-basis: 170rpx;
  overflow: hidden;
  color: #333;
  font-size: 28rpx;
}

.apply-list-item .list-item-input {
  flex: auto;
  font-size: 28rpx;
  color: #666;
  text-align: right;
}

.apply-list-item .list-item-img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  overflow: hidden;
}

.apply-list-item .list-item-img image {
  display: block;
  width: 100%;
  height: 100%;
}

.apply-list-item .list-item-icon {
  flex: auto;
  text-align: right;
  color: rgb(153, 153, 153);
  font-size: 26rpx;
}

.apply-refound {
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  padding: 28rpx 30rpx 28rpx 0;
  border-top: 1rpx solid rgb(235, 235, 235);
}

.apply-refound .list-item-label {
  -webkit-flex-basis: 224rpx;
  flex-basis: 224rpx;
  color: #333;
  font-size: 28rpx;
}

.apply-refound .list-item-textarea {
  width: calc(100% - 224rpx);
  max-height: 148rpx;
  color: #666;
  line-height: 37rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  font-size: 28rpx;
  word-break: break-all;
  text-align: right;
}

.apply-explain {
  text-align: right;
  padding: 0 30rpx;
  margin-top: 32rpx;
  color: #ff7100;
  font-size: 24rpx;
}

.origin-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

.origin-btn button[type=default] {
  color: #fff;
  background-color: #ff7100;
  border-radius: 0;
}

/* 团长说明 */

.apply-info {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.apply-info .apply-info-message {
  width: 560rpx;
  padding-top: 43rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  margin: 230rpx auto 0;
}

.apply-info-message .message-title {
  line-height: 44rpx;
  color: #000;
  font-size: 30rpx;
}

.apply-info-message .message-text {
  padding: 0 30rpx;
  max-height: 350rpx;
  line-height: 44rpx;
  overflow-y: scroll;
  color: #333;
  text-align: left;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  word-break: break-all;
  font-size: 26rpx;
}

.apply-info-message .message-btn {
  line-height: 79rpx;
  border-top: 1rpx solid #ebebeb;
  color: #ff7100;
  font-size: 30rpx;
}

.apply-list-item-auto {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 25rpx 30rpx 25rpx 0;
  color: #666;
  background-color: #fff;
  text-align: right;
  font-size: 28rpx;
}

.apply-list-item-auto view:nth-child(2) {
  width: calc(100% - 170rpx);
  word-break: break-all;
}