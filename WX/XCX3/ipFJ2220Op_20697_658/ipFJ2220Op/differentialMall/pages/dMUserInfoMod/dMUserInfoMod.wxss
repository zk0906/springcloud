.userInfoMod-main-wrap {
  min-height: 100vh;
  background-color: #f3f3f3;
}

.userInfoMod-main-wrap .user-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-content;
}
.userInfoMod-main-wrap .user-info.user-nickname-wrap {
  position: relative;
  padding: 20rpx 30rpx;
  box-shadow:0 2rpx 8rpx 0 rgba(41,41,41,0.05) inset;
}
.userInfoMod-main-wrap .user-nickname-wrap::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1px;
  background-color: #f1f1f1;
}
.userInfoMod-main-wrap .user-info > view {
  display: flex;
  align-items: center;
}
.userInfoMod-main-wrap .user-info .info-title {
  width: 136rpx;
}
.userInfoMod-main-wrap .user-info  input {
  width: 400rpx;
}
.userInfoMod-main-wrap .user-info  .input-pla {
  color: #999;
}
.userInfoMod-main-wrap .user-info image {
  height: 78rpx;
  width: 78rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.userInfoMod-main-wrap .user-info .icon-rightarrow {
  padding-right: 10rpx;
  font-size: 32rpx;
  color: #d2d2d2;
}
/* 保存按钮 */
.userInfoMod-save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 108rpx;
  border: 0 none;
  border-radius: 0;
  font-size: 36rpx;
  line-height: 108rpx;
  text-align: center;
  color: #fff;
  background-color: #ff7100;
}
/* toast样式 */
.toast-wrap {
  z-index: 10000;
  position: fixed;
  top: 48%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 0 50rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
  line-height: 72rpx;
  color: #fff;
  background-color: #ff7100;
  height: 0;
  opacity: 0;
  transition: opacity .6s ease-out;
}
.toast-wrap.show {
  height: 72rpx;
  opacity: 1;
  transition: opacity .6s ease-out;
}

