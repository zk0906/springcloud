page {
  background: #F3F3F3;
}
.invalid-tips {
  line-height: 80rpx;
  background: #FFFAEE;
  font-size: 26rpx;
  color: #ff7100;
}
.go-invalid-goods {
  width: 128rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 42rpx;
  border: 1px solid #ff7100;
  color: #ff7100;
  border-radius: 22rpx;
  margin-top: 18rpx; 
  margin-right: 30rpx;
}
.invalid-tips .icon-closes {
  color: #d2d2d2;
  padding: 0 20rpx 0 30rpx;
}
.favorites-header {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 12rpx;
}
.favorites-status-select {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 26rpx;
  color: #333;
  background: #f0f0f0;
  border-radius: 8rpx;
}
.select-status {
  display: inline-block;
  width: 94rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.favorites-status-select picker {
  padding: 0 20rpx;
}
.favorites-status-select .icon-downarrow {
  color: #d2d2d2;
  vertical-align: top;
}
.favorites-search {
  width: 428rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: inline-block;
  vertical-align: middle;
  background: #f0f0f0;
  margin-left: 20rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
}
.favorites-search .icon-search {
  padding: 0 14rpx;
  font-size: 28rpx;
  color: #999;
}
.favorites-search text,.favorites-search input {
  display: inline-block;
  vertical-align: middle;
  height: 60rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}
.favorites-operat {
  font-size: 26rpx;
  color: #333;
  line-height: 60rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.favorites-content {
  background: #fff;
}
.favorites-content image{
  width: 200rpx;
  height: 200rpx;
  min-width: 200rpx;
  display: inline-block;
  vertical-align: middle;
}
.goods-detail-box {
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  width: 100%;
  position: relative;
}
.goods-list {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEBEB;
}
.goods-list:last-child {
  border-bottom: none;
}
.goods-title {
  color: #333;
  font-size: 26rpx;
  line-height: 37rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}
.collect-number {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}
.goods-reduce-price {
  color: #ff7100;
  font-size: 22rpx;
  height: 28rpx;
  line-height: 26rpx;
  background: #FFF1E5;
  display: inline-block;
  padding: 0 6rpx;
  margin-right: 10rpx;
}
.almost-stock {
  background: #F2303E19;
  color: #F2303E;
  line-height: 28rpx;
  display: inline-block;
  font-size: 22rpx;
  padding: 0 6rpx;
}
.goods-price {
  font-size: 28rpx;
  color: #ff7100;
}
.goods-price-box .icon-addshoppingcart3 {
  margin-top: 10rpx;
  color: #ff7100;
}
.goods-price-box {
  position: absolute;
  bottom: 0;
  width: 100%;
}
.delete-goods {
  font-size: 28rpx;
  color: #fff;
  background: #ff7100;
  line-height: 58rpx;
  width: 180rpx;
  text-align: center;
  border-radius: 29rpx;
  margin-top: 16rpx;
}
.favorites-bottom {
  position: fixed;
  bottom: 0;
  background: #fff;
  left: 0;
  right: 0;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
}
.select-all {
  display: inline-block;
}
.select-all > text {
  display: inline-block;
  vertical-align: middle;
}
.favorites-check-box {
  display: inline-block;
  width: 36rpx;
  min-width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #EBEBEB;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
  line-height: 32rpx;
  box-sizing: border-box;
}
.goods-list .favorites-check-box{
  margin-top: 82rpx;
}
.favorites-check-box.checked {
  color: #ff7100;
  border: none;
}
.no-favorites-goods {
  text-align: center;
  margin-top: 160rpx;
}
.no-favorites-title {
  color: #666;
  font-size: 26rpx;
  margin: 30rpx 0 60rpx 0;
}
.no-favorites-btn {
  width: 220rpx;
  line-height: 60rpx;
  background: #ff7100;
  color: #fff;
  border-radius: 30rpx;
  display: inline-block;
  font-size: 28rpx;
}
.no-favorites-goods .icon-favorites {
  font-size: 110rpx;
  color: #CDCDCD;
}
.reduce-price-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
.reduce-price-contain {
  width: 490rpx;
  height: 664rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -362rpx;
  margin-left: -245rpx;
  border-radius: 10rpx;
}
.check-reduce-price {
  width: 356rpx;
  line-height: 76rpx;
  background: #ff7100;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
.wait-reduce-price {
  width: 356rpx;
  line-height: 76rpx;
  border: 1px solid #D2D2D2;
  color: #666;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  text-align: center;
}
.reduce-content {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.reduce-price-contain .reduce-title {
  height:226rpx;
  width:100%;
  margin-bottom:30rpx;
  background:url('http://cdn.jisuapp.cn/zhichi_frontend/static/webapp/images/xcx-goods/reduce-price.png');
  background-size:100% 100%;
  color:#fff;
  text-align:center;
  padding-top:34rpx;
}
.goods-invalid {
  background: #E6E6E6;
  font-size: 22rpx;
  line-height: 28rpx;
  width: 60rpx;
  text-align: center;
  display: inline-block;
  color: #999999;
  border-radius: 4rpx;
}