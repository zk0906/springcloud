page {
  background: #F3F3F3;
  height: 100%;
}
.foot-print-header {
  padding: 30rpx 20rpx;
  background: #fff;
}
.foot-print-search {
  display: inline-block;
  border-radius: 8rpx;
  overflow: hidden;
  vertical-align: middle;
}
.foot-print-search text{
  background: #F0F0F0;
  display: inline-block;
  vertical-align: middle;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
  color: #999;
  font-size: 28rpx;
}
.foot-print-search input {
  background: #F0F0F0;
  width: 550rpx;
  display: inline-block;
  vertical-align: middle;
  height: 56rpx;
  min-height: 56rpx;
  line-height: 56rpx;
  max-height: 56rpx;
  font-size: 26rpx;
}
.foot-print-operat {
  display: inline-block;
  vertical-align: middle;
  font-size: 26rpx;
  color: #333;
  padding-left: 20rpx;
}
.goods-cover {
  width: 368rpx;
  height: 368rpx;
  display: block;
}
.goods-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods-content > view{
  display: inline-block;
  width: 368rpx;
  background: #fff;
  margin-bottom: 10rpx;
  position: relative;
}
.goods-bottom {
  font-size: 20rpx;
  color: #999;
  position: relative;
  margin-top: 6rpx;
}
.goods-detail {
  padding: 15rpx 20rpx;
}
.goods-title {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-price {
  color: #ff7100;
  font-size: 28rpx;
}
.add-shopping-cart {
  color: #ff7100;
  font-size: 28rpx;
  position: absolute;
  right: 0;
}
.foot-print-container .foot-check-box {
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  border: 1px solid #d2d2d2;
  border-radius: 50%;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #564F4E;
}
.foot-check-box.checked {
  color: #ff7100;
  font-size: 42rpx;
  border: none;
  background: #fff;
}
.foot-bottom {
  position: fixed;
  bottom: 0;
  background: #fff;
  left: 0;
  right: 0;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
}
.foot-bottom .foot-check-box {
  vertical-align: middle;
  margin-right: 20rpx;
  background: #fff;
  height: 36rpx;
  line-height: 36rpx;
  width: 36rpx;
  border: 1px solid #d2d2d2;
  display: inline-block;
  border-radius: 50%;
}
.foot-bottom .foot-check-box.checked {
  font-size: 38rpx;
}
.select-all {
  display: inline-block;
}
.select-all text {
  display: inline-block;
  vertical-align: middle;
}
.delete-goods {
  width: 180rpx;
  line-height: 58rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background: #ff7100;
  border-radius: 30rpx;
  margin-top: 14rpx;
}
.foot-print-container {
  height:calc( 100% - 88rpx);
  overflow-y:auto;
}
.foot-null-box {
  font-size: 26rpx;
  color: #666666;
  text-align: center;
}
.foot-null-box image {
  width: 162rpx;
  height: 168rpx;
  margin-top: 310rpx;
  margin-bottom: 40rpx;
}
.foot-invalid {
  background: #e6e6e6;
  line-height: 28rpx;
  width: 60rpx;
  text-align: center;
  border-radius: 2rpx;
  color: #999;
  float: right;
  font-size: 22rpx;
}