page {
  background: #f3f3f3;
  height: 100%;
}
.refund-box {
  height: calc(100% - 88rpx);
  overflow-y: auto;
}
.refund-box > view {
  background: #fff;
}
.goods-detail-box image{
  width: 156rpx;
  height: 156rpx;
  display: inline-block;
  vertical-align: middle;
}
.goods-detail-contain {
  padding: 0 30rpx;
}
.goods-detail-box {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}
.goods-detail-box:last-child {
  border-bottom: none;
}
.goods-detail-box:last-child {
  margin-bottom: 15rpx;
}
.goods-detail-content {
  width: 506rpx;
  display: inline-block;
  vertical-align: top;
  margin-left: 28rpx;
}
.goods-name {
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.goods-rules {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}
.refund-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  border-top: 1rpx solid #f3f3f3;
}
.refund-cancel {
  width: 280rpx;
  display: inline-block;
  color: #666;
  background: #fff;
}
.refund-submit {
  width: 470rpx;
  display: inline-block;
  background: #ff7100;
  color: #fff;
}
.refund-instruct-title {
  font-size: 26rpx;
  color: #333;
}
.refund-instruct-title > text {
  color: #999;
  margin-left: 20rpx;
}
.refund-instruct {
  padding: 30rpx;
  margin-bottom:30rpx;
}

.refund-des {
  width: 100%;
  margin: 20rpx 0;
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  height: 145rpx
}
.add-pic {
  color: #D2D2D2;
  border: 1px dashed #D2D2D2;
  font-size: 22rpx;
  text-align: center;
}
.images-box > view{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  vertical-align: middle;
  margin-bottom: 20rpx;
  display: inline-block;
  margin-right: 30rpx;
  position: relative;
}
.images-box > view:nth-child(4n){
  margin-right: 0;
}
.images-box image {
  width: 100%;
  height: 100%;
}
.delete-image {
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 16rpx;
  background: rgba(0, 0, 0, 0.3)
}
.logistics-box {
  padding: 0 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #999;
  font-size: 26rpx;
}
.logistics-title {
  color: #333;
  display: inline-block;
  vertical-align: middle;
}
.logistics-box input {
  width: 360rpx;
  text-align: right;
  vertical-align: middle;
  height: 84rpx;
  line-height: 84rpx;
  min-height: 84rpx;
}
.logistics-contact {
  margin: 15rpx 0;
}
.logistics-box .icon-rightarrow {
  margin-left: 15rpx;
  font-size: 22rpx;
}
.is-seckill {
  display:inline-block;
  padding: 0 10rpx;
  background: #f2303e;
  color: #fff;
  font-size: 22rpx;
  height: 26rpx;
  line-height: 26rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}
.add-pic .icon-goods-add-image {
  font-size: 80rpx;
  margin-top: 16rpx;
}
.icon-shopping-scan {
  width: 70rpx;
  text-align: center;
  font-size: 35rpx;
  margin-right: -20rpx;
}