page {
  background: #F3F3F3;
  height: 100%;
}
.order-contain {
  height: calc(100% - 88rpx);
  overflow-y: auto;
}
.order-contain > view {
  padding: 0 30rpx;
  background: #fff;
}
.order-contain .seller-shipped {
  height: 180rpx;
  color: #fff;
  line-height: 180rpx;
  font-size: 34rpx;
  background: linear-gradient(to right, #FF8A00 , #FF3600);
  padding: 0;
  position: relative;
}
.order-contain .seller-shipped text {
  display: inline-block;
  vertical-align: middle;
}
.order-contain .seller-shipped .order-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  margin-left: 30rpx;
}
.seller-shipped image {
  position:absolute;
  bottom: 0;
  width: 100%;
  left: 0;
  height: 100%;
}
.goods-detail-box image{
  width: 156rpx;
  height: 156rpx;
  display: inline-block;
  vertical-align: middle;
}
.order-contain .goods-detail-box {
  padding: 30rpx;
}
.goods-detail-box > view {
  width: 506rpx;
  display: inline-block;
  vertical-align: top;
  margin-left: 28rpx;
}
.goods-name {
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  word-break: break-all;
}
.goods-rules {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-price {
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
}
.goods-amount {
  font-size: 24rpx;
  color: #666;
  line-height: 42rpx;
  overflow: hidden;
}
.actual-payment {
  line-height: 84rpx;
  color: #333;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}
.actual-payment .colorff7 {
  font-size: 28rpx;
}
.addition-info {
  line-height: 84rpx;
  color: #333;
  font-size: 26rpx;
}
.actual-payment > view,.addition-info > view {
  border-top: 1px solid #f3f3f3;
}
.no-border > view {
  border-top: 0;
}
.already-refund-goods {
  margin-top: 16rpx;
}  
.order-contain .order-number {
  font-size: 24rpx;
  color: #666;
  padding: 15rpx 30rpx;
  margin-bottom: 30rpx;
  margin-top: 16rpx;
}
.order-number > view {
  line-height: 50rpx;
}
.order-number  text:first-child {
  margin-right: 30rpx;
}
.order-number .pull-right {
  width: 100rpx;
  border-radius: 17rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 22rpx;
  border: 1px solid #D2D2D2;
  text-align: center;
  color: #999;
  margin-top: 6rpx;
}
.order-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 80rpx;
  text-align: right;
  box-sizing: border-box;
  border-top: 1px solid #EBEBEB;
}
.order-bottom .btn {
  border: 1px solid #D2D2D2;
  padding: 0 28rpx;
  line-height: 48rpx;
  margin-left: 20rpx;
  color: #999999;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 30rpx;
}
.order-bottom .btn.btn-orange {
  border-color: #ff7100;
  color: #ff7100;
  background: #fff;
}
.color999 {
  color: #999;
}
.colorff7 {
  color: #ff7100;
}
.is-seckill {
  display:inline-block;
  padding: 0 10rpx;
  background: #f2303e;
  color: #fff;
  font-size: 22rpx;
  height: 26rpx;
  line-height: 26rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}
.app-box {
  line-height: 84rpx;
}
.app-box .app-name {
  font-size: 28rpx;
  color: #333; 
  vertical-align: middle;
}
.app-box > view {
  border-bottom: 1px solid #F3F3F3;
}
.icon-rightarrow {
  font-size: 20rpx;
}
.apply-refund {
  float: left;
  width: 150rpx;
  font-size: 24rpx;
  text-align: left;
  color: #666;
}

.event-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
}
.event-dialog {
  width: 560rpx;
  height: 230rpx;
  background: #fff;
  margin-top: 350rpx;
  display: inline-block;
  border-radius: 10rpx;
}
.event-dialog-title {
  height: 150rpx;
  font-size: 28rpx;
  line-height: 150rpx;
}
.event-dialog-bottom {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #EBEBEB;
  font-size: 30rpx;
}
.event-dialog-bottom > text {
  width: 50%;
  display: inline-block;
  box-sizing: border-box;
}
.event-dialog-bottom .event-cancel {
  border-right: 1rpx solid #EBEBEB;
  color: #666666;
}
.event-dialog-bottom .event-sure {
  color: #FF7100;
}
.order-contain .order-prompt {
  padding: 24rpx 30rpx;
  line-height: 37rpx;
  color: #333;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}
.order-prompt text {
  color: #ff7100;
}
.order-contain .refund-apply-time {
  padding-bottom: 10rpx;
}
.order-contain .refund-address-box {
  padding: 20rpx 30rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}
.refund-address-title {
  color: #333;
  font-size: 28rpx;
}
.refund-address {
  color: #666;
  text-align: right;
  width: 520rpx;
  font-size: 26rpx;
  line-height: 37rpx;
  margin-top:10rpx;
  word-break:break-all;
}
.order-contain .refuse-message {
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #333;
  padding: 30rpx;
  line-height: 38rpx;
  word-break: break-all;
}