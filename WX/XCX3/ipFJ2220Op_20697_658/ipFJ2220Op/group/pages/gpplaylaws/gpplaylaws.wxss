.collage-playlaws {
  padding: 0 30rpx;
}

.collage-play-sort {
  display: flex;
  box-sizing: border-box;
  margin: 40rpx 0;
  overflow: hidden;
}

.collage-play-sort .serial-number {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 34rpx;
  width: 34rpx;
  font-size: 26rpx;
  border-radius: 50%;
  background: #ff3800;
  color: #fff;
}

.collage-play-sort .serial-number::after {
  position: absolute;
  content: '';
  width: 0;
  height: 500rpx;
  left: 50%;
  top: 34rpx;
  margin-left: -0.5px;
  font-weight: 100;
  border-left: 1px dashed #ff3800;
}

.collage-play-sort .serial-intro {
  font-size: 28rpx;
  font-weight: 400;
  margin-left: 25rpx;
  color: #333;
  width: calc(100% - 80rpx)
}

.collage-play-sort .serial-intro image {
  height: 310rpx;
  width: 640rpx;
  margin-top: 25rpx;
  padding-bottom:40rpx;
}

.collage-play-intro {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.collage-play-intro .title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.collage-play-intro .collage-intro-step>view{
  line-height: 44rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
}