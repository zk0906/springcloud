.ticket-list {
  margin-top: 23rpx;
}

.recommend-box .ticket {
  padding-bottom: 40rpx;
}

.ticket .top-section {
  width: 100%;
  height: 130rpx;
  margin: 0 auto;
  position: relative;
  background: #fff;
  border-radius: 4px;
  border: 1px solid #FFE8D6;
}

.ticket .recommmend-list {
  padding-top: 20rpx;
}

.ticket image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
}

.ticket .detail-info {
  width: 410rpx;
  display: inline-block;
  vertical-align: middle;
  height: 130rpx;
  border-right: 1px dashed #FFD4B2;
  position: relative;
}

.ticket .detail-info::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border-left: 1px solid #FFD4B2;
  border-bottom: 1px solid #FFD4B2;
  display: inline-block;
  position: absolute;
  right: -12rpx;
  top: -12rpx;
  z-index: 1;
  background: #fff;
  transform: rotate(-45deg);
}

.ticket .detail-info::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border-right: 1px solid #FFD4B2;
  border-top: 1px solid #FFD4B2;
  display: inline-block;
  position: absolute;
  right: -12rpx;
  bottom: -12rpx;
  z-index: 1;
  background: #fff;
  transform: rotate(-45deg);
}

.ticket .detail-info .name {
  color: #333;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ticket .detail-info .use-condition {
  color: #666;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ticket .background-word-area {
  position: absolute;
  right: -64rpx;
  top: -80rpx;
  padding: 10rpx;
  border: 1px solid #ff4d64;
  border-radius: 50%;
  color: #fff;
  opacity: 0.1;
}

.ticket .background-circle {
  width: 185rpx;
  height: 185rpx;
  line-height: 185rpx;
  background-color: #ff4d64;
  border-radius: 50%;
}

.ticket .background-word {
  position: absolute;
  bottom: 50rpx;
  left: 50rpx;
  font-size: 66rpx;
  line-height: 66rpx;
}

.ticket .receive-btn {
  font-size: 24rpx;
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  color: #FF7100;
  display: inline-block;
  margin-left: 20rpx;
  border: 1px solid #FF7100;
}

.ticket .top-section .right {
  float: left;
}

.ticket .bottom-section {
  position: relative;
  width: 100%;
  margin: 0 auto;
  height: 54rpx;
  line-height: 54rpx;
  text-indent: 1em;
  background: #fff;
  font-size: 18rpx;
  color: #999;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  box-shadow: 0px 5px 5px -5px rgba(0, 0, 0, 0.2), 5px 0px 5px -5px rgba(0, 0, 0, 0.2), -5px 0px 5px -5px rgba(0, 0, 0, 0.2);
}

.ticket .bottom-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 9rpx;
  width: calc(100% - 20rpx);
  border-top: 1px dashed #dbdbdb;
}

.ticket .bottom-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 22px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
  z-index: -1;
}

.ticket.has-receive .top-section {
  border-color: #ccc !important;
}

.ticket.has-receive .background-word-area {
  border-color: #ccc !important;
}

.ticket.has-receive .background-circle {
  background-color: #ccc !important;
}

.ticket.has-receive .receive-btn {
  background-color: #ccc !important;
}

