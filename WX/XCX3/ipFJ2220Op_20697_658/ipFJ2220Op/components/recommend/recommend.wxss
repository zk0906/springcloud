@charset 'utf-8';
@import "../../utils/font_icon.wxss";

.recommend-box .recommend-title {
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  line-height: 88rpx;
  background: #fff;
  border-bottom: 1px solid #f3f3f3;
}

.recommend-box .recommend-title::before {
  position: absolute;
  top: 44rpx;
  left: 180rpx;
  content: '';
  height: 2rpx;
  width: 100rpx;
  background: #e5e5e5;
  z-index: 1;
}

.recommend-box .recommend-title::after {
  position: absolute;
  top: 44rpx;
  right: 180rpx;
  content: '';
  height: 2rpx;
  width: 100rpx; 
  background: #e5e5e5;
  z-index: 1;
}

.recommend-wrap {
  -webkit-overflow-scrolling: touch;
  font-size: 28rpx;
  background: #eee;
  word-break: break-all;
  overflow: hidden;
}

.recommend-box {
  background: #fff;
  margin-bottom: 15rpx;
}

.recommend-box .recommmend-list {
  padding: 0 30rpx;
  background: #fff;
  margin-top: 10rpx;
}

.recommmend-list .recommend-item {
  display: flex;
  justify-content: space-between;
  text-align: left;
  padding: 18rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #f6f6f6;
}

.recommend-item .img-wrap {
  width: 168rpx;
  height: 128rpx;
  background: #eee;
  margin-left: 36rpx;
}

.recommend-item .recommend-article {
  position: relative;
  height: 150rpx;
  font-size: 28rpx;
  color: #333;
  width: 70%;
}

.goods-list .recommend-item .recommend-article {
  width: 100%;
}

.recommmend-list .recommend-item .img-wrap {
  width: 227rpx;
  height: 150rpx;
  position: relative;
}

.recommmend-list .recommend-item .img-wrap .icon-wrap {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 50%;
  text-align: center;
}

.recommmend-list .recommend-item .img-wrap .icon-wrap icon {
  display: inline;
  padding: 15rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 50%;
  font-size: 18rpx;
}

.recommend-item .recommend-article .recommend-content {
  font-size: 30rpx;
  font-weight: bold;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #333;
}
.recommend-box .recommend-goods-title {
  color: #333;
  font-size: 26rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.recommend-box .recommend-goods-price {
  color: #FF7100;
  font-size: 34rpx;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 5rpx;
}

.recommend-box .recommend-goods-sales {
  font-size: 22rpx;
  color: #999;
}

.recommend-box .recommend-key-words {
  position: absolute;
  bottom: 22rpx;
  color: #999;
  font-size: 22rpx;
  margin-top: 20rpx;
  width: 300rpx;
}

.recommend-box .recommend-key-words text:first-child {
  margin-right: 20rpx;
}

image {
  height: 100%;
