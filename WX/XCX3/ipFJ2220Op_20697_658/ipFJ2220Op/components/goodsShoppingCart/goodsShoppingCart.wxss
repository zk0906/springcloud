@charset 'utf-8';
@import "/utils/font_icon.wxss";
.goods-detail-dialog {
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  z-index: 11;
}
.goods-detail-contain {
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.goods-cover {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  position:relative;
  top: -40rpx;
  margin: 0 20rpx;
}
.select-goods-info {
  display: inline-block;
  width: 500rpx;
  vertical-align: top;
}
.goods-price {
  font-size: 30rpx;
  color: #ff7100;
  margin-top: 40rpx;
}
.goods-stock {
  color: #999;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.select-model {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.icon-closes {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #d2d2d2;
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
  color: #d2d2d2;
}
.goods-detail-content {
  padding: 0 20rpx;
  max-height: 500rpx;
  overflow-y: auto;
}
.goods-model {
  border-top: 1rpx solid #F3F3F3;
  padding-top: 30rpx;
}
.model-title {
  color: #333;
  font-size: 26rpx;
}
.sub-model > text {
  display: inline-block;
  line-height: 52rpx;
  padding: 0 20rpx;
  border-radius: 4rpx;
  background: #F2F2F2;
  border: 1rpx solid #F2F2F2;
  font-size: 24rpx;
  color: #333;
  margin: 25rpx 20rpx 30rpx 0;
  vertical-align: middle;
}
.sub-model > text.select {
  background: #FFF7F0;
  color: #ff7100;
  border-color: #ff7100;
}
.goods-num-title {
  color: #333333;
  font-size: 26rpx;
}
.goods-minus,.goods-plus,.goods-count {
  display: inline-block;
  border: 1rpx solid #EBEBEB;
  width: 50rpx;
  line-height: 44rpx;
  min-height: 44rpx;
  height: 44rpx;
  max-height: 44rpx;
  padding: 0;
  vertical-align: middle;
  box-sizing: border-box;
  text-align: center;
  color: #C9C9C9;
} 
.goods-count {
  font-size: 28rpx;
  color: #333;
}
.goods-num-contain {
  padding: 30rpx 20rpx 0;
  border-top: 1rpx solid #F3F3F3;
}
.good-number-box{
  float: right;
}
.goods-shopping-bottom {
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  position: relative;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 30rpx;
  display: flex;
}
.goods-shopping-bottom > view {
  flex: 1;
}
.goods-shopping-bottom .add-shoppingcart {
  background: #ff7100;
}
.goods-shopping-bottom .now-buy {
  background: #ffac0c;
}
.virtualPrice {
  margin-left: 30rpx;
  color: #a8a8a8;
  font-size: 24rpx;
  display: inline-block;
  text-decoration: line-through;
  vertical-align: text-bottom;
}