/* 地址 */
.buyer-information {
  padding: 30rpx;
  background: #fff;
}
.buyer-name-box {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}
.buyer-name-box > text {
  vertical-align: middle;
  display: inline-block;
}
.buyer-name {
  overflow: hidden;
  max-width: 300rpx;
  margin-right: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.buyer-box {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
  width: 630rpx;
  vertical-align: middle;
  display: inline-block
}
.buyer-information .icon-goods-location {
  margin-right: 26rpx;
  font-size: 34rpx;
  vertical-align: middle;
}
.buyer-address {
  font-size: 26rpx;
  color: #666;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
}
.line{
  width: 120rpx;
  height: 1px;
  background:#ccc;
  display: inline-block;
  vertical-align: middle;
}
.activity-box {
  padding: 20rpx;
  text-align: center;
  background: #f3f3f3;
  color: #CCCCCC;
  font-size: 22rpx;
}
.activity-title {
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
}
.order-price-box {
  background: #fff;
  padding: 0 30rpx;
  text-align: center;
}
.order-price {
  padding-top: 30rpx;
  border-top: 1rpx solid #f3f3f3;
  color: #ff7100;
  font-size: 54rpx;
}
.order-success {
  margin-top: 10rpx;
  color: #999;
  font-size: 26rpx;
}
.scratch-activity {
  margin-bottom: 40rpx;
}
.cash-delivery {
  line-height: 28rpx;
  width: 60rpx;
  color: #fff;
  background: #F2303E;
  font-size: 22rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  margin-right: 15rpx;
  border-radius: 4rpx;
}
.come-on {
  background: #ff7100;
}

.preview-title {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx 0 20rpx;
  background-color: #FEF3EA;
  color: #ff7100;
  font-size: 24rpx;
}

.preview-title text.icon-community_notify {
  margin-right: 10rpx;
}