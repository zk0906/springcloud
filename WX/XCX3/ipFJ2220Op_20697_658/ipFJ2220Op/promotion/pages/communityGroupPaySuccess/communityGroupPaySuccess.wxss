page {
  height: 100%;
  background: #f3f3f3;
}
/* 默认区域 */
.normal-area .pay-count {
  font-size: 22px;
  vertical-align: sub;
}
.normal-area image {
  width: 100%;
  height: 260rpx;
  display: block;
}
/* 集集乐区域 */
.collect-benefit-area {
  background: #fff;
  color:#818181;
}
.collect-item {
  position: relative;
  width: 100%;
  overflow:hidden;
}
.collect-item .star-num {
  margin: 30rpx 30rpx 50rpx 30rpx;
  font-size: 26rpx;
  color: #434343;
}
.collect-item .star-list {
  margin: 0 auto 10rpx;
  text-align: center;
  font-size: 0;
}
.collect-item .star-list .star-item {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-right: 60rpx;
  margin-bottom: 40rpx;
}
.collect-item .star-full {
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  transform: rotate(-25deg);
  padding: 8rpx;
  border: 1px solid #fd888a;
  border-radius: 50%;
}
.collect-item .star-full-text {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 55rpx;
  text-align: center;
  color: #fd888a;
  border: 1px solid #fd888a;
  border-radius: 50%;
}
.tip-item {
  line-height: 37rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #666;
}
.tip-item > view {
  line-height: 37rpx;
  border-top: 1rpx solid #f3f3f3;
  padding: 20rpx 0;
}
/* 按钮区域 */
.btn-area{
  padding: 50rpx 0;
  text-align: center;
  background: #fff;
}
.btn-area > view {
  width: 333rpx;
  height: 68rpx;
  line-height: 68rpx;
  display: inline-block;
  margin: 0 10rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 35rpx;
}
.finish-btn {
  border: 1rpx solid #ff7100;
  color: #ff7100;
}
.check-order-btn {
  border: 1rpx solid #D2D2D2;
  color: #666;
} 

.scratchWhole{
  background:#ff7100;
  padding: 0 0 40rpx 0;
}
.scratchArea{
  width: 604rpx;
  height: 300rpx;
  margin: 0 auto;
  background-image: url(http://cdn.jisuapp.cn/static/webapp/images/scratchCon.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: relative;
  overflow: hidden;
}
.scratch_wp{
  margin: 19rpx auto 0;
  width: 558rpx; 
  height: 258rpx;
}
.scratch-canvas{
  background: transparent;
  position: relative;
}
.showArea{
  position: absolute;
  left:0;
  top: 0; 
  width: 556rpx;
  height: 263rpx;
  z-index: 5; 
}
.showArea .showTitle{
  width: 100%;
  font-size: 24rpx;
  color: rgb(102,102,102);
  text-align: center;
  padding: 60rpx 0;
  letter-spacing: 4rpx;
}
.showArea .showBtn{
  width: 206rpx;
  height: 70rpx;
  background: #ff5b3f;
  color: #fff;
  font-size: 24rpx;
  border-radius: 9rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
}
/*未中奖*/
.scratchFail {
  position: absolute;
  left: 0;
  top: 0;
  width: 604rpx;
  height: 300rpx;
  /* z-index: 2; */
}
.scratchFail image {
  width: 100%;
  height: 100%;
}
.scratchFail .failTitle{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.scratchFail .failTitle .failShare{
  font-size: 24rpx;
  color: #999;
  text-align: right;
  padding: 24rpx 40rpx;
  cursor: pointer;
  background: none;
  line-height: 1.5;
}
.scratchFail .failTitle .failText{
  text-align: center;
  margin-top: 55rpx;
  font-size: 32rpx;
  color: rgb(102,102,102);

}
.scratchFail .failTitle .failBtn{
  width: 206rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #ff5b3f;
  text-align: center;
  color: #fff;
  border-radius: 8rpx;
  margin: 0 auto;
  font-size: 24rpx;
  cursor: pointer;
}
