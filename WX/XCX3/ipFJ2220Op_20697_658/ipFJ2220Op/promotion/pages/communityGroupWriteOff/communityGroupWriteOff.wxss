page {
  background-color: #fafafa;
}

.write {
  padding: 20rpx 30rpx;
  margin-bottom: 19rpx;
  background-color: #f3f3f3;
}

.write-search {
  position: relative;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30px;
  padding-left: 64rpx;
  color: #ccc;
  font-size: 26rpx;
}

.write-search .icon-search {
  position: absolute;
  left: 0;
  top: 50%;
  padding: 20rpx;
  transform: translateY(-50%);
}

.write-search input {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  color: #333;
}

.write-notice {
  padding: 0 30rpx;
  color: #999;
  font-size: 24rpx;
}

.write-scan {
  height: 400rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
}

.scan-btn {
  width: 550rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255, 54, 0, 1) 0%,rgba(255, 174, 0, 1) 100%);
  box-shadow:0px 3px 7px 0px rgba(255,61,0,0.2);
  border-radius: 44px;
  font-size: 32rpx;
  color: #fff;
}

.scan-btn .icon-shopping-scan {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.community-write-code {
  /* position: fixed;
  top: 107rpx;
  left: 0;
  z-index: 1; */
  background-color: #f2f2f2;
}

.myOrder-list-item {
  background-color: #fff;
  margin-bottom: 10rpx;
}

.myOrder-list-title {
  height: 94rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 30rpx 0;
  border-bottom: 1rpx solid rgba(243, 243, 243, 1);
}

.myOrder-list-title .title-name {
  display: block;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.myOrder-list-title .title-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.myOrder-list-title .title-time text {
  float: right;
  color: #ff7100;
}

.myOrder-list-goods {
  margin-bottom: 7rpx;
}

.goods-item {
  height: 160rpx;
  padding: 14rpx 30rpx 0;
  background: #fafafa;
  margin-bottom: 7rpx;
}

.goods-img {
  float: left;
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  margin-right: 42rpx;
  background-color: #fff;
}

.goods-img image {
  display: block;
  width: 100%;
  height: 100%;
}

.goods-describe {
  position: relative;
  float: left;
  width: calc(100% - 182rpx);
  height: 150rpx;
}

.goods-describe .goods-describe-title, .goods-describe .goods-describe-price,
.goods-describe .goods-describe-model {
  display: block;
  color: #333;
  font-size: 24rpx;
}

.goods-describe .goods-describe-title {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods-describe .goods-describe-model {
  font-size: 22rpx;
  color: #999;
  margin: 10rpx 0 15rpx;
}

.goods-describe .goods-describe-price {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 14rpx;
}

.goods-describe .goods-describe-price text {
  float: right;
}

.list-footer-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  padding: 0 30rpx;
}

.list-footer-label {
  padding: 20rpx 30rpx 26rpx;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #f3f3f3;
  text-align: right;
  line-height: 37rpx;
}

.list-footer-label > view:nth-child(1) {
  float: left;
  color: #666;
  font-size: 26rpx;
}

.list-footer-label > view:nth-child(1) label {
  color: #ff3600;
}

.list-footer-label .origin {
  color: #ff7100;
}

.list-footer-btn text {
  display: inline-block;
  width: 174rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 19rpx;
  border-radius: 25rpx;
  border: 1rpx solid #ff7100;
  text-align: center;
  color: #ff7100;
  font-size: 24rpx;
}

.list-footer-btn text.cancel-btn {
  border: 1rpx solid #d2d2d2;
  color: #999999;
}
