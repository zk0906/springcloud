page{
  font-size: 26rpx;
  background-color: #f3f3f3;
}
.coupon-desc{
  background-color: #fff;
}
.top-block{
  width: 750rpx;
  height: 180rpx;
  background-size: 100% 100%;
  padding: 52rpx 59rpx;
  box-sizing: border-box;
}
.top-block .tip:nth-child(1){
  font-size: 34rpx;
  color: #fff;
}
.top-block .tip:nth-child(2){
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #fff;
}
.coupon-item{
  padding: 28rpx 30rpx 0 30rpx;
  border-bottom: 1rpx solid #eee;
}
.coupon-item .title{
  color: #FF7200;
  font-size: 30rpx;
  margin-bottom: 36rpx;
}
.coupon-item .title .status{
  display: inline-block;
  background-color: #D2D2D2;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 4rpx;
  border-radius:4rpx;
  vertical-align: middle;
}
.coupon-item .title .status.active{
  background-color: #FF7200;
}
.coupon-item .detail{
  margin-bottom: 24rpx;
  color: #666666;
  font-size: 28rpx;
  display: flex;
}
.coupon-item .detail .left{
  flex: 0 0 140rpx;
}
.coupon-item .detail .detail-item{
  line-height: 1.6;
}
.coupon-item .detail .right{
  flex: 1;
}