  font-size: 36rpx;
  line-height: 52rpx;
}

.goods-cover-container .people-amount{
  font-size: 26rpx;
  color: #ababab;
  padding: 10rpx 0 10rpx 20rpx;
}

.group-price {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: linear-gradient(-135deg, transparent 66rpx, #F33B52 0);
