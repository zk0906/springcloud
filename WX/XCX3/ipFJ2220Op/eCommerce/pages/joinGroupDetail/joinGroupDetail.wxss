.pay-goods-models .pills-list {
  display: inline-block;
  vertical-align: middle;
}

.pay-goods-models view {
  margin: 0;
  padding: 12px 0;
}

.pills-list label {
  color: #aaa;
  margin-bottom: 2px;
  margin-top: 2px;
}

.pills-list label.select {
  position: relative;
  color: #f60;
}

.pills-list label.select:after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 12px;
