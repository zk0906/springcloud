}
.goods-bottom-opt .flex-sub-box-2{
  flex: 1;
}

.goods-bottom-opt .ico-moon {
  font-size: 20px;
}

contact-button {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.goods-comment-label {
  display: inline-block;
  padding: 4px 8px;
  background-color: #f5ece7;
  color: #7c7877;
  margin-right: 5px;
  border-radius: 2px;
  font-size: 12px;
}

.comment-item {
  padding: 15px 0 10px;
}

.comment-user-photo {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 7px;
  vertical-align: middle;
}

.comment-content {
  margin: 10px 0 6px;
  font-size: 13px;
