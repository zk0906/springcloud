  padding: 11px 10px;
  font-size: 16px;
  line-height: 16px;
  border-radius: 4px;
}

.goods-detail-cart-num {
  position: absolute;
  top: 0;
  right: 0;
  width: 18px;
  height: 18px;
  line-height: 18px;
  font-size: 14px;
  background-color: #ff1616;
  border-radius: 50%;
  color: #fff;
  text-align: center;
}

/*
  拼团商品样式
*/

.group-rule {
  height: 92rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
}

.group-tag {
  display: inline-block;
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  background: red;
  font-size: 12px;
  padding: 2rpx 10px;
  vertical-align: middle;
  color: #fff;
  margin-right: 12px;
  background-image: -webkit-gradient(linear, 0 0, right 0, from(#ff00ea), to(#ff0e18));
}

.group-tag::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-left: 6rpx solid #fff;
}

.group-tag::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-right: 6rpx solid #fff;
}

.group-step {
  margin: 0 auto;
  text-align: center;
  padding: 40rpx 0;
}

.group-step view {
  font-size: 66rpx;
  color: #d0011b;
  vertical-align: middle;
}

.group-step .arr {
  font-weight: bold;
  color: #d0011b;
  margin: 0 67rpx;
  font-size:18rpx;
}

.group-step .step-description {
  font-size: 22rpx;
  color: #666;
}

.group-step .step-description text {
  color: #666;
  display: inline-block;
  width: 33%;
  text-align: center;
  vertical-align: middle;
  margin-top: 20px;
}

.grouping {
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  font-size:30rpx;
}

.group-item {
  height: 150rpx;
  line-height: 150rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
}

.group-item image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  vertical-align: middle;
  margin-right: 20rpx;
}

.group-item-content {
  display: inline-block;
  vertical-align: middle;
  width: 300rpx;
}

.group-item-content view {
  height: 50rpx;
  line-height: 50rpx;
}

.group-item-price {
  display: inline-block;
  font-size: 18px;
  font-weight: bold;
  background-image: -webkit-gradient(linear, 0 0, right 0, from(#ff0e18), to(#ff00ea));
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  width: 150rpx;
  text-align: center;
}

.join-group-btn {
  display: inline-block;
  font-size: 12px;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #d0011b;
  color: #fff;
  padding: 4rpx 10rpx;
  position: relative;
}

.join-group-btn::after {
  content: '';
  position: absolute;
  right: -8px;
  top: 1px;
  border-top: 23rpx solid transparent;
  border-bottom: 23rpx solid transparent;
  border-left: 8px solid #d0011b;
}

.more-group {
  text-align: center;
  color: #d0011b;
  height: 20px;
  line-height: 20px;
  padding: 10px 0;
  font-size: 14px;
}

.no-group {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}

.start-group {
  display: inline-block;
  height: 30px;
  background: #d0011b;
  border-radius: 5px;
  text-align: center;
  line-height: 30px;
  color: #fff;
  padding: 0 20px;
  margin-left: 10px;
}

