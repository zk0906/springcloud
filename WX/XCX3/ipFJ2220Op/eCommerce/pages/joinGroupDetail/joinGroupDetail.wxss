}
.thumb {
  float: left;
  width: 60px;
  height: 60px;
  margin: 2px 10px 0;
}

.thumb image {
  width: 100%;
  height: 100%;
}

.pay-goods-title, .pay-goods-price {
  padding-right: 50px;
  line-height: 22px;
}

.pay-current-price {
  color: #f60;
}

.pay-current-price text {
  vertical-align: middle;
  font-size: 18px;
}

.pay-goods-models {
