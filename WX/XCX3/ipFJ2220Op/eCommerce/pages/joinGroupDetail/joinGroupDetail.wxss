/* 拼团进度 */

.progress {
  border-bottom: 1px solid #f9f9f9;
}

.progress .title {
  padding: 20rpx;
  font-size: 28rpx;
}

.progress .head-logo {
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}

.progress .group-leader {
  position: relative;
  display: inline-block;
  margin-right: 20rpx;
}

.progress .group-leader image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  border: 1px solid #ff3f00;
}
.progress .tag {
  font-size: 16rpx;
  background: #d0021b;
  width: 56rpx;
  color: #fff;
  position: absolute;
  text-align: center;
  height: 24rpx;
  line-height: 24rpx;
  bottom: 40rpx;
  left: 14rpx;
}
.progress .tag::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 6rpx solid #fff;
}
.progress .tag::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 6rpx solid #fff;
}
.progress .members{
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  margin-right: 20rpx;
  border: 1px solid #e9e9e9;
}
.progress .omit{
  height: 80rpx;
  width: 60rpx;
  line-height: 80rpx;
  text-align: center;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.progress .more-members{
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px dashed #ccc;
  margin-right: 20rpx;
  color: #ccc;
  border-radius: 100%;
  display: inline-block;
  vertical-align: top;
}
.progress .group-number{
  display: inline-block; 
  vertical-align:top;
}
.progress .total-mumber{
  text-align: center;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}
.progress .red-price {
  font-size: 30rpx;
  color: #ff3f00;
}
.progress .join-btn{
  width: 400rpx;
  line-height: 68rpx;
  color: #fff;
  background: linear-gradient(to bottom, #FAC354, #F77925);
  display: block;
  border-radius: 12rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto 20rpx auto;
}