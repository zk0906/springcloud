  color: #333;
}
.logistics-container {
  background: #fff;
  font-size: 24rpx;
  padding: 30rpx;
}
.logistics-item::before {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #D2D2D2;
  border-radius: 50%;
  position: absolute;
  left: -7rpx;
  top: 10rpx;
  z-index: 1;
}
.logistics-item:first-child::before {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #FF7100;
  border-radius: 50%;
  border: 6rpx solid #FFC699;
  position: absolute;
  left: -12rpx;
  top: 4rpx;
}
.logistics-item::after {
  content: '';
  display: inline-block;
  width: 1px;
  height: calc(100% - 20px);
  background: #EBEBEB;
  position: absolute;
  left: 0;
  top: 30px;
}
.logistics-item:last-child::after{
  display: none;
}
.logistics-location {
  margin-bottom: 15rpx;
}
.logistics-item:first-child .logistics-location  {
  color: #333;
  font-size: 30rpx;
}
