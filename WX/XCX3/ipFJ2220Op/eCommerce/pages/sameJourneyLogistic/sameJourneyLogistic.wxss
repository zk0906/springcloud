.logistics-container {
  background: #fff;
  font-size: 24rpx;
  padding: 36rpx 30rpx 0;
}
.logistics-item::before {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #D2D2D2;
  border-radius: 50%;
  position: absolute;
  left: -7rpx;
  top: 10rpx;
  z-index: 1;
}
.logistics-item:first-child::before {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #FF7100;
  border-radius: 50%;
  border: 6rpx solid #FFC699;
  position: absolute;
  left: -12rpx;
  top: 4rpx;
}
.logistics-item::after {
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 82%;
  background: #EBEBEB;
  position: absolute;
  left: 0;
  top: 30rpx;
}
.logistics-item:last-child::after{
  display: none;
}
.logistics-location {
  margin-bottom: 12rpx;
}
.logistics-item:first-child .logistics-location  {
  color: #333;
}
.logistics-item:first-child .logistics-time  {
  color: #666;
}
