.coupon-verify-wrap .bottom-section .verify-block {
  /* margin: 120rpx 42rpx 0; */
  display: inline-block;
  margin-top: 150rpx;
  background: #fff;
  width: 500rpx;
  padding: 0 40rpx;
  text-align: center;
}
.coupon-verify-wrap .bottom-section .success-block {
  height: 350rpx;
}
.coupon-verify-wrap .bottom-section .qrcode {
  display: inline-block;
  width: 500rpx;
  height: 500rpx;
  padding-top: 50rpx;
}
.bottom-section .qrcode image {
  width: 100%;
  height: 100%;
}
.coupon-verify-wrap .bottom-section .code {
  color:#333;
  font-size:36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px dashed #ccc;
  padding: 40rpx 0 50rpx 0;
  margin: 15rpx 20rpx 0;
}
.coupon-verify-wrap .bottom-section .tip {
  margin-top:18rpx;
  font-size:28rpx;
  color:#666;
}
.coupon-verify-wrap .bottom-section .success-tip {
  padding-top: 75rpx;
}
.coupon-verify-wrap .bottom-section .success-tip-icon {
  display: inline-block;
  vertical-align: middle;
}
.coupon-verify-wrap .bottom-section .success-tip-text {
  display: inline-block;
  height: 24px;
  line-height: 24px;
  font-size: 20px;
  margin-left: 8px;
  vertical-align: middle;
}
.coupon-verify-wrap .bottom-section .back-tip {
  margin-top: 28rpx;
  font-size: 28rpx;
  color:#666;
}