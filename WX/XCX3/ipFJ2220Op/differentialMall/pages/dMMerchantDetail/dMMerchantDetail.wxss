.merchantDetail-main-wrap {
  min-height: 100vh;
  background-color: #fff;
}

/* 商家信息 */
.merchantDetail-info-wrap {
  padding: 30rpx 30rpx 0;
  background-color: #fff;
  box-shadow:0 2rpx 8rpx 0 rgba(41,41,41,0.05) inset;
}
.merchantDetail-info-wrap .merchant-info-wrap {
  display: flex;
  padding-bottom: 30rpx;
}
.merchantDetail-info-wrap .merchant-name-like {
  width: 408rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10rpx;
}
.merchant-name-like .merchant-name {
  max-width: 340rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #232323;
}
.merchant-name-like .icon-dmstar {
  font-size: 42rpx;
  color: #ffc600;
  animation: starlinear .5s linear;

}
.merchant-name-like .icon-dmstar-empty {
  font-size: 42rpx;
  color: #d2d2d2;
}
.merchantDetail-info-wrap .merchant-type {
  display: inline-block;
  padding-top: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
}
.merchantDetail-info-wrap .merchant-img-list {
  width:238rpx;
  height:180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border-radius:6rpx;
  background-color: #f3f9fe;
  overflow: hidden;
}
.merchantDetail-info-wrap .merchant-img {
  display: flex;
  align-items: center;
  justify-content: center;
  width:238rpx;
  height:180rpx;
  margin-right: 30rpx;
  border-radius:6rpx;
  overflow: hidden;
}
.merchantDetail-info-wrap .merchant-img image {
  max-height: 100%;
  max-width: 100%;
}
.merchantDetail-info-wrap .merchant-img image.logo-img {
  max-height: 70%;
  max-width: 70%;
}
.merchantDetail-info-wrap .merchant-address .address-wrap {
  display: flex;
  align-items: center;
}
.merchantDetail-info-wrap .merchant-address {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.merchantDetail-info-wrap .merchant-address .icon-fesadress{
  font-size: 30rpx;
  color: #999;
}
.merchantDetail-info-wrap .merchant-address .address-txt{
  max-width: 570rpx;
  margin-left: 18rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchantDetail-info-wrap .merchant-address .icon-takeout-cellphone{
  padding: 28rpx 18rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  color: #FE8359;
}

/* 商家优惠券 */
.merchantDetail-coupons-wrap {
  padding: 0 30rpx 30rpx;
  border-top: 14rpx solid #f3f3f3;
  background-color: #fff;
}

.merchant-coupons-list .coupon-item {
  position: relative;
  padding: 32rpx 0 30rpx;
}

.merchant-coupons-list .coupon-item::before {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  right: 0;
  border-top-color: #dfdfdf;
  border-top-style: dashed;
  border-top-width: 1px;
  transform: scaleY(0.5);
}

.merchant-coupons-list .coupon-info {
  display: flex;
  align-items: flex-start;
  margin-top: 10rpx;
}
.merchant-coupons-list .coupon-info .coupon-mark {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #FF3600;
  background-color: rgba(255,54,0,.06);
}
.merchant-coupons-list .coupon-info .coupon-mark::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(255,54,0,.4);
  width: 200%;
  height: 200%;
  transform-origin: 0 0;
  transform: scale(0.5,0.5);
  box-sizing: border-box;
}
.merchant-coupons-list .coupon-info .coupon-name-exchange {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx;
}
.merchant-coupons-list .coupon-name-exchange .coupon-name {
  height: 32rpx;
  max-width: 360rpx;
  font-size: 30rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
}
.merchant-coupons-list .coupon-name-exchange .coupon-exchange-num,
.merchant-coupons-list .coupon-indate {
  max-width: 340rpx;
  margin-top: 20rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #999;
}
.merchant-coupons-list .coupon-indate {
  margin-top: 14rpx;
}
.merchant-coupons-list .coupon-item .coupon-exchange {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(0,-50%);
  display: flex;
  justify-items: center;
  align-items: center;
}
.merchant-coupons-list .coupon-item .exchange-btn {
  padding: 15rpx 24rpx;
  border-radius:40rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #fff; 
  background:linear-gradient(-90deg,rgba(255,54,0,1),rgba(255,174,0,1));
}
.merchant-coupons-list .coupon-item .exchange-diff {
  display: flex;
  align-items: flex-start;
  margin-right: 22rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #ff7100;
}
.merchant-coupons-list .coupon-item .exchange-diff text:first-child {
  padding-right: 4rpx;
  font-size: 18rpx;
  line-height: 30rpx;
}
/* 拨打电话 */
.callphone-wrap {
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  background-color: rgba(0, 0, 0, .5);
}
.callphone-wrap view {
  width: 100%;
  padding: 32rpx 0;
  font-size: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #000;
  background-color: rgba(255,255,255,1);
}
.callphone-wrap .phone-txt {
  padding: 52rpx 0;
  color: #666;
  font-size: 30rpx;
  line-height: 30rpx;
}
.callphone-wrap .phone-txt.thin-bd-b::before {
  background-color: #f5f5f5;
}
.callphone-wrap .cancle-btn {
  border-top: 10rpx solid #f5f5f5;
}

/* toast样式 */
.toast-wrap {
  z-index: 10000;
  position: fixed;
  top: 48%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 0 50rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
  line-height: 72rpx;
  color: #fff;
  background-color: #ff7100;
  height: 0;
  opacity: 0;
  transition: opacity .6s ease-out;
}
.toast-wrap.show {
  height: 72rpx;
  opacity: 1;
  transition: opacity .6s ease-out;
}

/* 0.5像素线条 */
.thin-bd-b,
.thin-bd-t {
  position: relative;
}
.thin-bd-b:before,
.thin-bd-t:before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  width: 100%;
  background-color: #e5e5e5;
  transform: scaleY(0.5);
  box-sizing: border-box;
}
.thin-bd-b:before {
  bottom: 0;
}
.thin-bd-t:before {
  top: 0;
}

@keyframes starlinear {
  
  /** 第一种写法**/
  0% {
    transform: scale(1,1);
  }
  50% {
    transform: scale(1.3,1.3);
  }
  100% {
    transform: scale(1,1);
  }
}